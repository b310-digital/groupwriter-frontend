{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "Bundler",
    "sourceMap": false,
    "outDir": "dist",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}